<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.rickydoo.widgets.FontAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <net.rickydoo.widgets.FontButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <net.rickydoo.widgets.FontCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <net.rickydoo.widgets.FontCheckedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <net.rickydoo.widgets.FontEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fefefe"
            android:orientation="vertical">
            <net.rickydoo.widgets.FontRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:text="Hello World!"
                font:fontAssets="TerminalDosis-Bold.ttf"/>
            <net.rickydoo.widgets.FontRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:text="Hello World!"
                font:fontAssets="TerminalDosis-Bold.ttf"/>
            <net.rickydoo.widgets.FontRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:text="Hello World!"
                font:fontAssets="TerminalDosis-Bold.ttf"/>
        </RadioGroup>

        <net.rickydoo.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>

        <net.rickydoo.widgets.FontToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="Hello World!"
            font:fontAssets="TerminalDosis-Bold.ttf"/>
    </LinearLayout>
</ScrollView>
